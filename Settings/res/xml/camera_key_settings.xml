<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/camera_key_action_setting_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/camera_key_action_category_title">
        <Preference android:persistent="false" android:title="@string/camera_key_action_none_title" android:key="camera_key_action_none" />
        <Preference android:persistent="false" android:title="@string/camera_key_action_shortcut_title" android:key="camera_key_action_shortcut">
            <intent android:targetPackage="com.android.settings" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.CameraKeyActionShortcutPicker" />
        </Preference>
        <Preference android:persistent="false" android:title="@string/camera_key_action_toggle_title" android:key="camera_key_action_toggle">
            <intent android:targetPackage="com.android.settings" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.CameraKeyActionTogglePicker" />
        </Preference>
        <Preference android:persistent="false" android:title="@string/camera_key_action_app_title" android:key="camera_key_action_app">
            <intent android:targetPackage="com.android.settings" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.CameraKeyActionAppPicker" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
